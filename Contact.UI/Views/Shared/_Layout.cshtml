<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Beau Contact Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
            @Scripts.Render("~/bundles/components")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/respond.js"></script>
    <script src="~/Scripts/components/jquery.mask.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    <script src="~/Scripts/angular-touch.min.js"></script>
    <script src="~/Scripts/components/bootbox.js"></script>
    <script src="~/Scripts/components/toastr.js"></script>
    <script src="~/Scripts/components/moment.js"></script>
    <script src="~/Scripts/components/bootbox-progress.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/atatanasov/gijgo@1.8.0/dist/combined/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://cdn.jsdelivr.net/gh/atatanasov/gijgo@1.8.0/dist/combined/css/gijgo.min.css" rel="stylesheet" type="text/css" />

    <!-- paging -->
    <script src="~/Scripts/angular-dirPagination.js"></script>

</head>
<body ng-app="app">
    @Html.Partial("../Partial/_NavPartial")
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year - Beau Contact Application 
            </p>
        </footer>

        <div class="progress_modal"></div>

    </div>

    @RenderSection("scripts", required: false)
</body>
</html>


<script>

    $(document).ready(function () {
        $('.nav-link').on('click', function () {
            $('.navbar-collapse').collapse('hide');
        });
    });

</script>